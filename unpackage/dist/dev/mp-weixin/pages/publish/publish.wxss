/* 水平间距 */
.container {
  background-color: #ecedef;
  overflow: hidden;
}
.container .pic {
  width: 340rpx;
  height: 400rpx;
  margin: 60rpx auto 40rpx;
}
.container .pic ._img {
  width: 100%;
  height: 100%;
}
.container .title {
  font-size: 50rpx;
  text-align: center;
  margin-bottom: 60rpx;
}
.container .text {
  text-align: center;
  font-size: 24rpx;
  color: #a8a9a7;
  margin-bottom: 40rpx;
}
.container .btn {
  height: 100rpx;
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .btn button {
  width: 80%;
  height: 100rpx;
  background-color: #4186fd;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  border-radius: 50rpx;
}

