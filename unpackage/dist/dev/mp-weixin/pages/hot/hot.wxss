/* 水平间距 */
.container .title {
  display: inline-block;
  width: 30%;
}
.container .title .item {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  float: left;
  line-height: 100rpx;
  text-align: center;
  color: #b9b9b9;
}
.container .title .item view {
  width: 0rpx;
  height: 100rpx;
  border: 4rpx solid #4188fd;
  float: left;
}
.container .title .active {
  background-color: #f7f7f9;
  color: #000;
}
.container .content {
  float: right;
  width: 70%;
  height: 1000rpx;
  background-color: #ecedef;
}
.container .content .item {
  width: 90%;
  height: 140rpx;
  background-color: pink;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
  overflow: hidden;
}
.container .content .item .text {
  font-size: 40rpx;
  color: #fff;
  margin: 20rpx;
  /* 1、先强制一行内显示文本（默认 normal 自动换行） */
  white-space: nowrap;
  /* 2、超出的部分隐藏 */
  overflow: hidden;
  /* 3、文字用省略号替代超出的部分 */
  text-overflow: ellipsis;
}

