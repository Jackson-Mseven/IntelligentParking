/* 水平间距 */
view .top {
  padding-top: 10rpx;
}
view .top .search {
  width: 90%;
  height: 80rpx;
  background-color: #e6e6e6;
  line-height: 80rpx;
  margin: 0 auto;
  padding-left: 30rpx;
  border-radius: 50rpx;
  color: #ccc;
}
view .top .search ._span {
  padding-left: 20rpx;
}
view .top .router {
  display: flex;
  padding: 20rpx 0;
}
view .top .router view {
  flex: 1;
  text-align: center;
  color: #000;
}
view .top .router .active {
  color: #4186fd;
}
view .map {
  overflow: hidden;
}
view .map #map {
  width: 100%;
}
view .near {
  overflow: hidden;
  height: 3100rpx;
}
view .near .twig {
  width: 100rpx;
  margin: 20rpx auto;
  border: 6rpx solid darkgray;
  border-radius: 6rpx;
}
view .near .pointer {
  color: darkgray;
  text-align: center;
  font-size: 26rpx;
  margin-bottom: 40rpx;
}
view .near .title {
  background-color: #e6e6e6;
  color: darkgray;
  margin-left: 20rpx;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 26rpx;
}
view .near .active {
  color: #4186fd;
  background-color: #b6e5f8;
}
view .near .details {
  margin: 40rpx auto 0rpx;
  height: 2500rpx;
}
view .near .details .detail {
  position: relative;
  margin: 0rpx auto 40rpx;
  height: 250rpx;
  width: 90%;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 10rpx darkgray;
}
view .near .details .detail ._h1 {
  padding: 30rpx 0 30rpx 30rpx;
  display: inline-block;
  width: 80%;
  /* 1、先强制一行内显示文本（默认 normal 自动换行） */
  white-space: nowrap;
  /* 2、超出的部分隐藏 */
  overflow: hidden;
  /* 3、文字用省略号替代超出的部分 */
  text-overflow: ellipsis;
}
view .near .details .detail view {
  position: relative;
}
view .near .details .detail view .left1 {
  position: absolute;
  left: 30rpx;
  display: inline-block;
  width: 60%;
  /* 1、先强制一行内显示文本（默认 normal 自动换行） */
  white-space: nowrap;
  /* 2、超出的部分隐藏 */
  overflow: hidden;
  /* 3、文字用省略号替代超出的部分 */
  text-overflow: ellipsis;
}
view .near .details .detail view .right1 {
  position: absolute;
  right: 30rpx;
}
view .near .details .detail view .left2 {
  position: absolute;
  left: 30rpx;
  top: 66rpx;
}
view .near .details .detail view .left2 .car {
  padding: 8rpx;
  border-radius: 4rpx;
  font-size: 26rpx;
}
view .near .details .detail view .left2 .blue {
  color: blue;
  background-color: lightblue;
}
view .near .details .detail view .left2 .green {
  color: green;
  background-color: lightgreen;
}
view .near .details .detail view .left2 .purple {
  color: purple;
  background-color: lightsteelblue;
}
view .near .details .detail view .left2 .surplus {
  padding-left: 10rpx;
}
view .near .details .detail view .right2 {
  position: absolute;
  right: 30rpx;
  top: 66rpx;
}
view .near .details .detail .go {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 30rpx;
  right: 40rpx;
}

